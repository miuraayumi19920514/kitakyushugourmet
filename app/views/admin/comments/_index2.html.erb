<div class = "container my-5">
  <div class="row justify-content-center">
    <div class="col-10">

      <div class = "py-3">
        <h2>コメント一覧</h2>

        <div class = "d-flex justify-content-end">
          <%= link_to '新しい順', admin_comments_path(latest: "true") %>
          |<%= link_to '古い順', admin_comments_path(old: "true") %>
        </div>
        <div class="table-responsive">
          <table class="table border table-hover">
            <thead>
              <tr>
                <th class = "text-center" nowrap>コメント</th>
                <th class = "text-center" nowrap>ユーザー名</th>
                <th class = "text-center" nowrap>投稿日</th>
              </tr>
            </thead>
            <tbody>
              <% comments.each do |comment| %>
                <tr>
                  <td><%= comment.comment %></td> <!-- コメント内容を表示 -->
                  <td class = "text-center" nowrap><%= comment.user.name %></td> <!-- コメントしたユーザーの名前を表示 -->
                  <td class = "text-center" nowrap><%= comment.created_at.strftime('%Y/%m/%d') %></td> <!-- コメントの投稿日を表示 -->
                  <td nowrap><%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger", remote: true %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class = "d-flex justify-content-center">
          <%= paginate comments %>
        </div>
      </div>
    </div>
  </div>
</div>
