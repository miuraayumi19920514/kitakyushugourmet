<div class = "container col-8 my-5">
  <% if @user == current_user %>
    <div class = "mb-4">
      <h2>Myいいね一覧</h2>
    </div>
  <% else %>
    <div class = "mb-4">
      <h2><%= @user.name %>さんのいいね一覧</h2>
    </div>
  <% end %>

  <% if @favorites.empty? %>
    まだ、いいねしてません。
  <% else %>
    <div class="d-flex justify-content-end">
      <%= link_to '新しい順', user_favorites_path(@user, latest: true) %>
      | <%= link_to '古い順', user_favorites_path(@user, old: true) %>
      | <%= link_to '人気順', user_favorites_path(@user, favorite_count: true) %>
    </div>
    <table class="table border">
      <thead style="background-color: #ffe6ee;">
        <tr>
          <th class="poster">投稿者</th>
          <th class = "text-center">店名</th>
          <th class = "text-center">タイトル</th>
          <th class = "text-center">コメント数</th>
          <th class = "text-center">いいね</th>
        </tr>
      </thead>
      <tbody>
        <% @favorites.each do |favorite| %>
          <tr>
            <td class="poster">
              <% if favorite.review.user.local_person == "local" %>
                <h4 class="person_local"><%= I18n.t("enums.user.local_person.#{favorite.review.user.local_person}") %></h4>
              <% else %>
                <h4 class="person_traveler"><%= I18n.t("enums.user.local_person.#{favorite.review.user.local_person}") %></h4>
              <% end %>
            </td>
            <td class = "text-center"><h4><%= link_to favorite.review.shop , review_path(favorite.review) %></h4></td>
            <td class = "text-center"><%= favorite.review.title %></td>
            <td class = "text-center" id = "comment_count">
              <%= render "user/comments/count", review: favorite.review %>
            </td>
            <td class = "text-center" id="favorite_buttons_<%= favorite.review.id %>">
              <%= render "user/favorites/favorite", review: favorite.review %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>