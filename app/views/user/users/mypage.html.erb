<div class = "container col-5 mt-5 mb-5">
  <div class = "container border mt-5 pt-3 pb-3 px-5">
    <h2>マイページ</h2>
    
    <table>
      <tbody>
        <tr>
          <td><%= image_tag @user.get_image(200,200) %></td>
        </tr>
        <tr>
          <th>
            <%= I18n.t("enums.user.local_person.#{@user.local_person}") %>
          </th>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>一言</th>
          <td><%= @user.introduction %></td>
        </tr>
         <tr>
          <th>いいね一覧</th>
          <td><%= link_to "見る", user_favorites_path(@user) %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "プロフィール編集" , information_edit_path %><br>
      <%= link_to "退会する" , unsubscribe_path %>
    </div>
  </div>  
    
    
  <div>
    <div class = "mt-4 mb-2">
      <h5>マイレビュー一覧</h5>
    </div>
    
    <% if @reviews.empty? %>
      投稿はまだありません
    <% else %>
      <table class="table border">
        <thead style="background-color: #ffe6ee;">
          <tr>
            <th class = "table-column">店名</th>
            <th class = "table-column">タイトル</th>
            <th class = "table-column">コメント数</th>
            <th class = "table-column">いいね数</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td class = "table-column"><h4><%= link_to review.shop , review_path(review) %></h4></td>
              <td class = "table-column"><%= review.title %></td>
              <td class = "table-column" id = "comment_count">
                <%= render "user/comments/count", review: review %>
              </td>
              <td class = "table-column"><%= review.favorites.count %></td>
              <td><%= link_to "編集" , edit_review_path(review) %></td>
              <td><%= link_to "削除" , review_path(review), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>