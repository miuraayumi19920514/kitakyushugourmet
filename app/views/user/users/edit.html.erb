<div class = "container my-5">
  <div class="row justify-content-center">
    <div class="col-10">

      <div class = "border py-3 px-4">
        <h2 class="text-nowrap">プロフィール編集</h2>

        <div class = "my-5">
          <%= render "user/shared/error_messages", resource: @user %>
        </div>

        <%= form_with model: @user, url: information_path, method: :patch do |f| %>
          <div class = "mt-5">
            <%= f.label :name, "★表示名" %>
            <%= f.text_field :name, :placeholder => "※2～10字以内", class: "form-control", required: true %>
          </div>

          <div class = "mt-4">
            <%= f.label :introduction, "★一言" %>
            <%= f.text_field :introduction, :placeholder => "※50字以内", class: "form-control" %>
          </div>

          <div class = "mt-4">
            <%= f.label :image , "★アイコン画像" %><br>
            <%= f.file_field :image, accept: "image/*", style:"font-size: 14px;" %>
          </div>

          <div class = "d-flex justify-content-center mt-5 mb-3">
            <%= f.submit "変更", class: "btn btn-success w-40" %>
          </div>
        <% end %>
      </div>
      <div class = "d-flex justify-content-center my-5">
        <%= link_to "戻る", mypage_path %>
      </div>
    </div>
  </div>
</div>