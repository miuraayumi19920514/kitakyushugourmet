<div class = "container col-5 mt-5 mb-5">
  
  <div class = "mt-4 mb-5">
    <h2>みんなのレビュー</h2>
  </div>

  <table class="table border">
    <thead style="background-color: #ffe6ee;">
      <tr>
        <th class="poster">投稿者</th>
        <th class = "table-column">店名</th>
        <th class = "table-column">タイトル</th>
        <th class = "table-column">コメント数</th>
        <th class = "table-column">いいね</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td class="poster">
            <%= I18n.t("enums.user.local_person.#{review.user.local_person}") %>
          </td>
          <td class = "table-column"><h4><%= link_to review.shop , review_path(review) %></h4></td>
          <td class = "table-column"><%= review.title %></td>
          <td class = "table-column" id = "comment_count">
            <%= render "user/comments/count", review: review %>
          </td>
          <td class = "table-column" id = "favorite_buttons_<%= review.id %>">
            <%= render "user/favorites/favorite", review: review %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>