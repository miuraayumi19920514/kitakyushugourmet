<div class = "container border col-6 my-5">

  <div class = "mt-3">
    <h2>レビュー編集</h2>
  </div>

  <div class = "my-5">
    <%= render "user/shared/error_messages", resource: @review %>
  </div>

  <%= form_with model: @review, url: review_path(@review), method: :patch do |f| %>

    <div class = "mt-4">
      <%= f.label :shop , "★お店の名前" %>
      <%= f.text_field :shop, :placeholder => "※1～20字以内", class: "form-control", required: true %>
    </div>

    <div class = "mt-4">
      <%= f.label :address , "★お店の住所" %>
      <%= f.text_field :address, :placeholder => "※10～50字以内", class: "form-control", required: true %>
    </div>

    <div class = "mt-4">
      <%= f.label :title , "★タイトル" %>
      <%= f.text_field :title, :placeholder => "※5～20字以内", class: "form-control", required: true %>
    </div>

    <div class = "mt-4">
      <%= f.label :body , "★本文" %>
      <%= f.text_field :body, :placeholder => "※2～400字以内", class: "form-control", required: true %>
    </div>

    <div class="form-group position-static mt-4">
        <div id="post_raty">★初見の入りやすさ：</div> <!-- 星を出力するセレクタ -->
          <script>
              var elem = document.querySelector('#post_raty');
              var opt = {
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  scoreName: 'review[star]',
                  score: <%= @review.star %>
              };
              raty(elem,opt);
          </script>
    </div>

    <div class="mt-4">
      <%= f.label :image , "★写真" %><br>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class = "d-flex justify-content-center mt-5 mb-3">
      <%= f.submit "変更" , class: "btn btn-success w-40" %>
    </div>

    <div class = "d-flex justify-content-center mb-4">
      <%= link_to "戻る", review_path(@review) %>
    </div>

  <% end %>
</div>