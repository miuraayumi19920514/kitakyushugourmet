<div class = "container col-5 mt-5 mb-5">
  
  <div class = "container border mt-5 pt-3 pb-3 px-5" style="position: relative;">
    <div class = "mt-4">
      <h2><%= @review.shop %></h2>
    </div>
    <div class = "pl-4">
      <%= @review.address %>
    </div>
    
    <div id="favorite_buttons_<%= @review.id %>" style="position: absolute; right: 15px; top: 10px;">
      <%= render "user/favorites/favorite", review: @review %>
    </div>
    
    <div class = "mt-4">
      投稿：<%= I18n.t("enums.user.local_person.#{@review.user.local_person}") %>
    </div>
  
    <div style="display: flex;">
      <div>
        初見の入りやすさ度：
      </div>
      <div>
        <%= render "output_star", review: @review %>
      </div>
    </div>
  
    <div class = "mt-4 pt-3 pb-1 px-5 " style="background-color: #ffe6ee;">
      <div class = "mt-3 text-center">
        <h4><%= @review.title %></h4>
      </div>
      <div class = "mt-3" style="border-bottom: 1px solid gray;">
        <%= @review.body %>
      </div>
      <div class = "mt-5 mb-2">
        <%= image_tag @review.get_image(100,100) %>
      </div>
  
      <div style="position: absolute; right: 10px; bottom: 10px;">
        <% if @review.user == current_user %>
          <%= link_to "編集" , edit_review_path(@review), class: "btn btn-sm btn-success w-40" %>
          <%= link_to "削除" , review_path(@review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger float-end" %>
        <% end %>
      </div>
    </div>
  
    <div class = "mt-3">
      この記事は
      <%= link_to user_path(@user) do %>
        <%= @user.name %>さん
      <% end %>
      が書きました
    </div>
  </div>
  
    <div id = "comment_textarea" class = "mt-5" >
      <%= render "user/comments/form", review: @review, comment: @comment %>
    </div>
  
  <div id = "comment_index" class = "mt-5" >
    <%= render "user/comments/index", review: @review %>
  </div>
</div>

